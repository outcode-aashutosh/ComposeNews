<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.outcode.compose_news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.outcode.compose_news.ui.NewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeNews">

        <activity
            android:name="com.outcode.compose_news.ui.screen.articles.ArticlesListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeNews.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.outcode.compose_news.ui.screen.details.ArticleDetailsActivity"
            android:theme="@style/Theme.ComposeNews.NoActionBar" />

    </application>

</manifest>